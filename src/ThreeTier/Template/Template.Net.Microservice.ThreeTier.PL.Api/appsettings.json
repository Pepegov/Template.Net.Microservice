{
  "IdentityServerUrl": {
    "Authority": "https://localhost:10001"
  },

  "CurrentIdentityClient": {
    "Name" : "Microservice.Identity",
    "Id" : "Microservice.Identity-ID",
    "Secret": "Microservice.Identity-SECRET",
    "ConsentType" : "implicit",
    "GrandTypes": [
      "refresh_token",
      "authorization_code",
      "client_credentials",
      "password"
    ],
    "Scopes": [
      "profile",
      "openid",
      "offline_access"
    ]
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "OpenIddict": "Information",
        "Microsoft.EntityFrameworkCore": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "shared": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  
  "Cors": {
    "Origins": "*"
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;User Id=postgres;Password=password;Database=Microservice"
  },

  "RabbitMQ": {
    "Url": "localhost",
    "Host": "microservice",
    "User": "rmuser",
    "Password": "rmpassword"
  },
  
  "AllowedHosts": "*"
}
